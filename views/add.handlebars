<section id="add" class="container">
    <div class="form-wrap">
      <h1>Add A Bounty</h1>
      <p>Your Bounty will be viewable by all Bounty Hunters</p>
      {{#each errors}}
      <div class="error">
          <p>{{text}}</p>
      </div>
      {{/each}}
      <form action="/add" method="POST">
        <div class="form-group">
          <label for="title">Bounty Title</label>
          <input type="text" name="title"  class="form-control input-box" placeholder="eg. Bounty Posting Title"
            maxlength="100" value={{title}}>
        </div>
        <div class="form-group">
          <label for="description"> Description</label>
          <textarea name="description" class="form-control input-box" placeholder="Describe the details of the Bounty"
            rows="10" value={{description}}></textarea>
        </div>
        <div class="form-group">

          <label for="payment"> Reward</label>
          <input type="number" name="payment" class="form-control input-box" placeholder="eg. 5, 25, 50" value={{payment}}>
        </div>
         <input type="submit" value="Add Bounty" class="btn btn-reverse">
        
      </form>
    </div>
  </section>