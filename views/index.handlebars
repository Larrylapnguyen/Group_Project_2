<div id="home">
  <h1>Bounty Board</h1>
  <hr>
  <h2>Open Bounties</h2>
  <ul>
    {{#each bounties}}
    {{#if completed}}
    {{else}}
    {{#if accepted}}
    {{else}}
    <li>
      <h3>Title: </h3>{{title}}
      <h3>ID: </h3>{{id}}
      <h3>Description: </h3>{{description}}
      <h3>Accepted</h3> {{#if accepted}}Accepted {{else}} Not Accepted{{/if}}
      <h3>Completed: </h3>{{#if completed}}Completed{{else}}Not Completed{{/if}}
      <br>
      <form method="POST" action="/bounties/accepted/{{this.id}}?_method=PUT">
      <button class="accepted">
        Test Accept
      </button>
      </form>
      <hr>
    </li>
    {{/if}}
    {{/if}}
    {{/each}}
  </ul>

  <br>
  <br>
  <h2>Bounties In Progress</h2>
  <ul>
    {{#each bounties}}
    {{#if accepted}}
    {{#if completed}}
    {{else}}
    <li>
      <h3>Title: </h3>{{title}}
      <h3>ID: </h3>{{id}}
      <h3>Description: </h3>{{description}}
      <form method="POST" action="/bounties/completed/{{this.id}}?_method=PUT">
      <button class="completed" data-id="{{id}}" data-accept="{{completed}}">
        Test Complete
      </button>
      </form>
    </li>
    {{/if}}
    {{/if}}
    {{/each}}
  </ul>
  
  <hr>
  <br>
  <br>
  <h2>Bounties In Completed</h2>
  <ul>
    {{#each bounties}}
    {{#if completed}}
    <li>
      <h3>Title: </h3>{{title}}
      <h3>ID: </h3>{{id}}
      <h3>Description: </h3>{{description}}
    </li>
    {{/if}}
    {{/each}}
  </ul>
</div>